<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.apecode.blog.mapper.TagMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.apecode.blog.entity.Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="createTime" property="createTime"/>
        <result column="updateTime" property="updateTime"/>
    </resultMap>

    <resultMap id="TagBackDto" type="cn.apecode.blog.dto.TagBackDto">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="createTime" property="createTime"/>
        <result column="articleCount" property="articleCount"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id
        , name, createTime, updateTime
    </sql>
    <!-- 查询后台标签列表 -->
    <select id="listTagBack" resultMap="TagBackDto">
        select t.id,
               t.name,
               t.createTime,
               t.updateTime,
               count(tat.articleId) as articleCount
        from t_tag t
        left join t_article_tag tat on t.id = tat.tagId
        <where>
            <if test="condition.keywords != null">
                t.name like concat('%',#{condition.keywords}, '%')
            </if>
        </where>
        group by t.id
        order by t.id desc
    </select>
    <!-- 查询文章标签 -->
    <select id="listTagNameByArticleId" resultType="java.lang.String">
        SELECT name
        FROM (SELECT tagId
              FROM t_article_tag
              WHERE articleId = #{id}) tat
                 LEFT JOIN t_tag t ON t.id = tat.tagId;
    </select>
</mapper>
