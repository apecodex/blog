<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.apecode.blog.mapper.TalkMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.apecode.blog.entity.Talk">
        <id column="id" property="id" />
        <result column="userId" property="userId" />
        <result column="content" property="content" />
        <result column="isTop" property="isTop" />
        <result column="status" property="status" />
        <result column="createTime" property="createTime" />
        <result column="updateTime" property="updateTime" />
    </resultMap>

    <resultMap id="TalkBackResult" type="cn.apecode.blog.dto.TalkBackDto" >
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="isTop" property="isTop" />
        <result column="status" property="status" />
        <result column="createTime" property="createTime" />
        <result column="updateTime" property="updateTime" />
        <collection property="user" ofType="cn.apecode.blog.dto.SimpleUserInfoDto" >
            <result column="uid" property="uid" />
            <result column="nickname" property="nickname" />
            <result column="avatar" property="avatar" />
            <result column="intro" property="intro" />
            <result column="webSite" property="webSite" />
        </collection>
        <collection property="pictureVideos" ofType="cn.apecode.blog.dto.TalkPictureVideoDto" >
            <result column="src" property="src" />
            <result column="pvId" property="id" />
            <result column="fileName" property="fileName" />
        </collection>
    </resultMap>

    <resultMap id="TalkFrontResult" type="cn.apecode.blog.dto.TalkFrontDto" >
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="isTop" property="isTop" />
        <result column="createTime" property="createTime" />
        <collection property="user" ofType="cn.apecode.blog.dto.SimpleUserInfoDto" >
            <result column="uid" property="uid" />
            <result column="nickname" property="nickname" />
            <result column="avatar" property="avatar" />
            <result column="intro" property="intro" />
            <result column="webSite" property="webSite" />
        </collection>
        <collection property="src" ofType="java.lang.String" >
            <result column="src" />
        </collection>
    </resultMap>

    <resultMap id="TalkBackOnlyDtoResult" type="cn.apecode.blog.dto.TalkBackOnlyDto">
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="isTop" property="isTop" />
        <result column="status" property="status" />
        <collection property="pictureVideos" ofType="cn.apecode.blog.dto.TalkPictureVideoDto">
            <result property="id" column="pvId" />
            <result property="src" column="src" />
            <result property="fileName" column="fileName" />
        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, userId, content, isTop, status, createTime, updateTime
    </sql>

    <!-- 查看后台说说 -->
    <select id="listTalkBack" resultMap="TalkBackResult">
        SELECT t.id,
               t.userId,
               t.content,
               t.isTop,
               t.`status`,
               t.createTime,
               t.updateTime,
               ttpv.src,
               ttpv.id as pvId,
               ttpv.fileName,
               tui.uid,
               tui.nickname,
               tui.avatar,
               tui.intro,
               tui.webSite
        FROM (SELECT id, userId, content, isTop, status, createTime, updateTime
              FROM t_talk tt
              <where>
                  <if test="condition.keywords != null" >
                      tt.content LIKE CONCAT('%', #{condition.keywords}, '%')
                  </if>
                  <if test="condition.status != null" >
                      AND tt.status = #{condition.status}
                  </if>
              </where>
              ORDER BY tt.id DESC
              LIMIT #{current}, #{size}
        ) t
            LEFT JOIN t_user_info tui ON t.userId = tui.id
            LEFT JOIN t_talk_picture_video ttpv ON t.id = ttpv.talkId
        ORDER BY t.id DESC, ttpv.orderNum;
    </select>

    <!-- 查看说说列表 -->
    <select id="listTalkFront" resultMap="TalkFrontResult">
        SELECT t.id,
               t.userId,
               t.content,
               t.isTop,
               t.createTime,
               ttpv.src,
               tui.uid,
               tui.nickname,
               tui.avatar,
               tui.intro,
               tui.webSite
        FROM (SELECT id, userId, content, isTop, `status`, createTime
              FROM t_talk tt
              WHERE tt.status = 1
              ORDER BY tt.isTop DESC, tt.id DESC
              LIMIT #{current}, #{size}) t
                 LEFT JOIN t_user_info tui ON t.userId = tui.id
                 LEFT JOIN t_talk_picture_video ttpv ON t.id = ttpv.talkId
        ORDER BY t.isTop DESC, t.id DESC, ttpv.orderNum;
    </select>

    <!-- 根据id查看说说 -->
    <select id="getTalkById" resultMap="TalkFrontResult">
        SELECT t.id,
               t.content,
               t.isTop,
               t.createTime,
               ttpv.src,
               tui.uid,
               tui.nickname,
               tui.avatar,
               tui.intro,
               tui.webSite
        FROM (SELECT id,
                     userId,
                     content,
                     isTop,
                     `status`,
                     createTime
              FROM t_talk
              WHERE id = #{id}
                AND `status` = 1) t
                 LEFT JOIN t_user_info tui ON t.userId = tui.id
                 LEFT JOIN t_talk_picture_video ttpv ON t.id = ttpv.talkId
        ORDER BY ttpv.orderNum;
    </select>
    <!-- 根据id获取后台说说 -->
    <select id="getTalkBackOnlyById" resultMap="TalkBackOnlyDtoResult">
        SELECT t.id,
               t.content,
               t.isTop,
               t.status,
               ttpv.src,
               ttpv.id as pvId,
               ttpv.fileName
        FROM (SELECT id,
                     userId,
                     content,
                     isTop,
                     `status`,
                     createTime
              FROM t_talk
              WHERE id = #{id}) t
                 LEFT JOIN t_talk_picture_video ttpv ON t.id = ttpv.talkId
        ORDER BY ttpv.orderNum;
    </select>

</mapper>
